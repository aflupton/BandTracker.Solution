@{
  Layout = "_Layout";
}
<div class="container-fluid">
  <h2 class="display-4"><em>Venues</em></h2>
  <hr>
  @if(Model.Count != 0)
  {
    <div class="">
      <a class="btn btn-secondary" href="/Venues/CreateForm">Create a new entry</a>
      <a class="btn btn-secondary" href="/Venues/DeleteAll">Delete All</a>
      <a class="btn btn-secondary" href="/">Home</a>
    </div>
    <br>
    <ul class="list-group">
      @foreach(var venue in Model)
      {
        <li class="list-group-item">
          <div class="table-responsive-md">
            <table class="table text-center">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Venue Id</th>
                  <th>Venue Name</th>
                  <th>Venue Address</th>
                  <th>Venue Hours</th>
                  <th>Action</th>
                  <th>Add a band</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th>@venue.GetVenueId()</th>
                  <td>@venue.GetVenueName()</td>
                  <td>@venue.GetVenueAddress()</td>
                  <td>@venue.GetVenueHours()</td>
                  <td>
                    <a class="btn btn-secondary" href="/Venues/{id}/Delete">Delete</a>
                  </td>
                  <td>
                    <form class="form-group" action="/Venues/{id}/AddToJoin" method="post">
                      <label for="addBands"></label>
                      <input type="text" name="addBands">
                      <button class="btn btn-secondary" type="submit" name="button">Enter</button>
                    </form>
                  </td>
                </tr>
              </tbody>
            </table>

          </div>
        </li>
      }
    </ul>
  } else {
    <h5>You haven't entered any venues.</h5>
    <h5><a class="btn btn-secondary" href="/Venues/CreateForm">Enter a new venue</a></h5>
    <h5><a class="btn btn-secondary" href="/">Return home</a></h5>
  }

</div>
