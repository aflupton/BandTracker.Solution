@{
  Layout = "_Layout";
}
<div class="container-fluid">
  <h2><em>Bands</em></h2>
  <hr>
  @if(Model.Count != 0)
  {
    <div class="">
      <a href="/Bands/CreateForm">Create a new entry</a>
      <a href="/">Home</a>
    </div>
    <ul class="list-group">
      @foreach(var band in Model["Band"])
      {
        <li class="list-group-item">
          <div class="table-responsive-md">
            <table class="table text-center">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Band Id</th>
                  <th>Band Name</th>
                  <th>Band Genre</th>
                  <th>Band Hometown</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th>@band.GetBandId()</th>
                  <td>@band.GetBandName()</td>
                  <td>@band.GetBandGenre()</td>
                  <td>@band.GetBandFrom()</td>
                  <td>
                    <a href="/Bands/{id}/Delete">Delete</a>
                  </td>
                  <td>
                    <form class="form-group" action="/Bands/{id}/AddToJoin" method="post">
                      <label for="addVenue">Add a venue</label>
                      <input type="text" name="addVenue">
                    </form>
                  </td>
                </tr>
              </tbody>
            </table>

          </div>
        </li>
      }
    </ul>
  } else {
    <h5>You haven't entered any bands.</h5>
    <h5><a class="btn btn-secondary" href="/Bands/CreateForm">Enter a new band</a></h5>
    <h5><a class="btn btn-secondary" href="/">Return home</a></h5>
  }

</div>
