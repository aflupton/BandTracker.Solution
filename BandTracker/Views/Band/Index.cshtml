@{
  Layout = "_Layout";
}
<div class="container-fluid">
  <h2 class="display-4"><em>Bands</em></h2>
  <hr>
  @if(Model.Count != 0)
  {
    <div class="">
      <a class="btn btn-secondary" href="/Bands/CreateForm">Create a new entry</a>
      <a class="btn btn-secondary" href="/Bands/DeleteAll">Delete All</a>
      <a class="btn btn-secondary" href="/">Home</a>

    </div>
    <br>
    <ul class="list-group">
      @foreach(var band in Model)
      {
        <li class="list-group-item">
          <div class="table-responsive-md">
            <table class="table text-center">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Band Id</th>
                  <th>Band Name</th>
                  <th>Band Genre</th>
                  <th>Band Hometown</th>
                  <th>Add a venue</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th>@band.GetBandId()</th>
                  <td><a class="btn btn-secondary" href="/Bands/@band.GetBandId()">@band.GetBandName()</a></td>
                  <td>@band.GetBandGenre()</td>
                  <td>@band.GetBandFrom()</td>


                  <td>
                    <form class="form-group" action="/Bands/{id}/AddToJoin" method="post">
                      <label for=""></label>
                      <label for="addVenue"></label>
                      <input type="text" name="addVenue">
                      <button class="btn btn-secondary" type="submit" name="button">Enter</button>
                    </form>
                  </td>
                </tr>
              </tbody>
            </table>

          </div>
        </li>
      }
    </ul>
  } else {
    <h5>You haven't entered any bands.</h5>
    <h5><a class="btn btn-secondary" href="/Bands/CreateForm">Enter a new band</a></h5>
    <h5><a class="btn btn-secondary" href="/">Return home</a></h5>
  }

</div>
