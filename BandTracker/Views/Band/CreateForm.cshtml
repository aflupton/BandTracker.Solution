@{
  Layout = "_Layout";
}
<div class="container-fluid">
  <h2><em>Band Entry Form</em></h2>
  <br>
  <div class="row text-left">
    <div class="col-md-2">
      <a class="btn btn-secondary" href="/">Return home</a>
    </div>
    <div class="col-md-2">
      <a class="btn btn-secondary"href="/Bands">See all bands</a>
    </div>
  </div>
<br>
  <div class="row">
    <div class="col-md-6">
      <form class="form" action="/Bands/New" method="post">
        <div class="form-group">
          <label for="band-name">Band name:</label>
          <input class="form-control" type="text" name="band-name">
        </div>
        <div class="form-group">
          <label for="band-genre">Band genre:</label>
          <input class="form-control" type="text" name="band-genre">
        </div>
        <div class="form-group">
          <label for="band-from">Band hometown:</label>
          <input class="form-control" type="text" name="band-from">
        </div>
        <button class="btn btn-secondary"type="submit" name="button">Enter</button>
      </form>
    </div>
  </div>
</div>
